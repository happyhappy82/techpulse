---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';

// Static paths 생성
export async function getStaticPaths() {
  const reviews = await getCollection('reviews');
  return reviews.map((review) => ({
    params: { slug: review.slug },
    props: { review },
  }));
}

const { review } = Astro.props;
const { Content } = await review.render();

// 날짜 포맷팅
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('ko-KR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// 메타 정보
const title = review.data.title;
const description = review.data.description;
const ogImage = review.data.ogImage || review.data.product.image;
const keywords = review.data.keywords || `${review.data.product.brand} ${review.data.product.name} 리뷰, 가격, 스펙`;
---

<BaseLayout
  title={title}
  description={description}
  ogType="article"
  ogImage={ogImage}
  keywords={keywords}
  publishedTime={review.data.publishedAt}
  modifiedTime={review.data.updatedAt}
>
  <Header />

  <main>
    <article class="review-article">
      <!-- Product Header -->
      <header class="product-header">
        <a href="/" class="back-link">&larr; Back</a>
        <h1 class="product-title">{review.data.title}</h1>
        <div class="article-info">
          <time datetime={review.data.publishedAt}>
            {formatDate(review.data.publishedAt)}
          </time>
          <span class="separator">&middot;</span>
          <span class="brand">{review.data.product.brand}</span>
        </div>
        <p class="affiliate-notice">이 포스팅은 쿠팡 파트너스 활동의 일환으로, 이에 따른 일정액의 수수료를 제공받습니다.</p>
      </header>

      <!-- Main Content -->
      <div class="prose">
        <Content />
      </div>
    </article>
  </main>

  <footer class="footer">
    <p>&copy; 2024 TechPulse. All rights reserved.</p>
  </footer>
</BaseLayout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* Product Header */
  .product-header {
    margin-bottom: 48px;
    padding-top: 48px;
  }

  .back-link {
    display: inline-block;
    font-size: 14px;
    color: #888;
    margin-bottom: 32px;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: #000;
  }

  .product-title {
    font-size: 40px;
    font-weight: 700;
    color: #000;
    margin-bottom: 16px;
    line-height: 1.2;
    letter-spacing: -0.03em;
  }

  .article-info {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #888;
  }

  .separator {
    color: #ccc;
  }

  .brand {
    font-weight: 500;
  }

  .affiliate-notice {
    font-size: 12px;
    color: #999;
    margin-top: 12px;
    line-height: 1.5;
  }

  /* Prose */
  .prose {
    margin-bottom: 48px;
  }

  .prose :global(h2) {
    font-size: 24px;
    font-weight: 700;
    color: #000;
    margin: 48px 0 16px;
    padding-bottom: 12px;
    border-bottom: 1px solid #e5e5e5;
    letter-spacing: -0.02em;
  }

  .prose :global(h3) {
    font-size: 18px;
    font-weight: 600;
    color: #111;
    margin: 32px 0 12px;
  }

  .prose :global(p) {
    font-size: 16px;
    line-height: 1.85;
    color: #333;
    margin-bottom: 20px;
    word-break: keep-all;
  }

  .prose :global(a) {
    color: #2563eb;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    color: #1d4ed8;
  }

  .prose :global(strong) {
    font-weight: 600;
    color: #000;
  }

  .prose :global(ul) {
    margin: 16px 0 24px;
    padding-left: 24px;
    list-style-type: disc;
  }

  .prose :global(ol) {
    margin: 16px 0 24px;
    padding-left: 24px;
    list-style-type: decimal;
  }

  .prose :global(li) {
    font-size: 16px;
    line-height: 1.8;
    color: #333;
    margin-bottom: 6px;
  }

  .prose :global(li::marker) {
    color: #999;
  }

  .prose :global(blockquote) {
    border-left: 3px solid #e5e5e5;
    padding-left: 16px;
    margin: 24px 0;
    color: #666;
    font-style: italic;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid #e5e5e5;
    margin: 40px 0;
  }

  /* 표 스타일 */
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0 28px;
    font-size: 14px;
  }

  .prose :global(thead) {
    background: #f8f8f8;
  }

  .prose :global(th) {
    padding: 12px 16px;
    font-weight: 600;
    color: #111;
    text-align: left;
    border-bottom: 2px solid #e0e0e0;
    white-space: nowrap;
  }

  .prose :global(td) {
    padding: 11px 16px;
    color: #333;
    border-bottom: 1px solid #f0f0f0;
    line-height: 1.6;
  }

  .prose :global(tbody tr:hover) {
    background: #fafafa;
  }

  .prose :global(code) {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 14px;
    background: #f5f5f5;
    padding: 2px 6px;
    border-radius: 4px;
    color: #e11d48;
  }

  .prose :global(pre) {
    background: #1a1a1a;
    color: #e5e5e5;
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 24px 0;
    font-size: 14px;
    line-height: 1.6;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .prose :global(figure) {
    margin: 32px 0;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .prose :global(figcaption) {
    font-size: 13px;
    color: #888;
    text-align: center;
    margin-top: 8px;
  }

  /* Footer */
  .footer {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 40px;
    border-top: 1px solid #e5e5e5;
    margin-top: 80px;
  }

  .footer p {
    font-size: 13px;
    color: #999;
  }

  /* Responsive */
  @media (max-width: 768px) {
    main {
      padding: 0 20px;
    }

    .product-header {
      padding-top: 32px;
    }

    .product-title {
      font-size: 28px;
    }

    .article-info {
      font-size: 12px;
    }

    .footer {
      padding: 32px 20px;
      margin-top: 48px;
    }
  }
</style>
