---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import PriceComparison from '../../components/PriceComparison.astro';
import SpecTable from '../../components/SpecTable.astro';

// Static paths 생성
export async function getStaticPaths() {
  const reviews = await getCollection('reviews');
  return reviews.map((review) => ({
    params: { slug: review.slug },
    props: { review },
  }));
}

const { review } = Astro.props;
const { Content } = await review.render();

// 총 점수 계산
function calculateTotalScore(scores: any) {
  const { performance, design, display, battery, value } = scores;
  if (display === 0) {
    return Math.round((performance + design + battery + value) / 4);
  }
  return Math.round((performance + design + display + battery + value) / 5);
}

// 점수에 따른 색상 반환
function getScoreColor(score: number): string {
  if (score >= 90) return '#10B981'; // excellent
  if (score >= 80) return '#3B82F6'; // great
  if (score >= 70) return '#F59E0B'; // good
  if (score >= 60) return '#EF4444'; // fair
  return '#DC2626'; // poor
}

// 점수에 따른 등급 반환
function getScoreLabel(score: number): string {
  if (score >= 90) return '탁월';
  if (score >= 80) return '우수';
  if (score >= 70) return '양호';
  if (score >= 60) return '보통';
  return '미흡';
}

const totalScore = calculateTotalScore(review.data.scores);
const scoreColor = getScoreColor(totalScore);
const scoreLabel = getScoreLabel(totalScore);

// 카테고리 한글 이름
const categoryNames: Record<string, string> = {
  laptop: '노트북',
  smartphone: '스마트폰',
  gadget: '가젯',
};

// 날짜 포맷팅
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('ko-KR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// 메타 정보
const title = review.data.title;
const description = review.data.description;
const ogImage = review.data.ogImage || review.data.product.image;
const keywords = review.data.keywords || `${review.data.product.brand} ${review.data.product.name} 리뷰, 가격, 스펙`;
---

<BaseLayout
  title={title}
  description={description}
  ogType="article"
  ogImage={ogImage}
  keywords={keywords}
  publishedTime={review.data.publishedAt}
  modifiedTime={review.data.updatedAt}
>
  <Header />

  <main>
    <article class="review-article">
      <!-- Product Header -->
      <header class="product-header">
        <a href="/" class="back-link">&larr; Back</a>
        <h1 class="product-title">{review.data.product.name}</h1>
        <div class="article-info">
          <time datetime={review.data.publishedAt}>
            {formatDate(review.data.publishedAt)}
          </time>
          <span class="separator">&middot;</span>
          <span class="brand">{review.data.product.brand}</span>
        </div>
      </header>

      <!-- Score Summary -->
      <section class="score-summary">
        <div class="total-score-card">
          <div class="total-score-circle" style={`--score-color: ${scoreColor}`}>
            <svg width="120" height="120" viewBox="0 0 120 120">
              <circle
                cx="60"
                cy="60"
                r="52"
                fill="none"
                stroke="#e5e5e5"
                stroke-width="8"
              />
              <circle
                cx="60"
                cy="60"
                r="52"
                fill="none"
                stroke={scoreColor}
                stroke-width="8"
                stroke-linecap="round"
                stroke-dasharray={`${(totalScore / 100) * 326.7} 326.7`}
                transform="rotate(-90 60 60)"
              />
            </svg>
            <div class="total-score-text">
              <span class="score-number">{totalScore}</span>
              <span class="score-label">{scoreLabel}</span>
            </div>
          </div>
        </div>

        <div class="individual-scores">
          {review.data.scores.performance > 0 && (
            <div class="score-item">
              <span class="score-name">성능</span>
              <div class="score-bar">
                <div
                  class="score-bar-fill"
                  style={`width: ${review.data.scores.performance}%; background-color: ${getScoreColor(review.data.scores.performance)}`}
                />
              </div>
              <span class="score-value">{review.data.scores.performance}</span>
            </div>
          )}
          {review.data.scores.design > 0 && (
            <div class="score-item">
              <span class="score-name">디자인</span>
              <div class="score-bar">
                <div
                  class="score-bar-fill"
                  style={`width: ${review.data.scores.design}%; background-color: ${getScoreColor(review.data.scores.design)}`}
                />
              </div>
              <span class="score-value">{review.data.scores.design}</span>
            </div>
          )}
          {review.data.scores.display > 0 && (
            <div class="score-item">
              <span class="score-name">디스플레이</span>
              <div class="score-bar">
                <div
                  class="score-bar-fill"
                  style={`width: ${review.data.scores.display}%; background-color: ${getScoreColor(review.data.scores.display)}`}
                />
              </div>
              <span class="score-value">{review.data.scores.display}</span>
            </div>
          )}
          {review.data.scores.battery > 0 && (
            <div class="score-item">
              <span class="score-name">배터리</span>
              <div class="score-bar">
                <div
                  class="score-bar-fill"
                  style={`width: ${review.data.scores.battery}%; background-color: ${getScoreColor(review.data.scores.battery)}`}
                />
              </div>
              <span class="score-value">{review.data.scores.battery}</span>
            </div>
          )}
          {review.data.scores.value > 0 && (
            <div class="score-item">
              <span class="score-name">가성비</span>
              <div class="score-bar">
                <div
                  class="score-bar-fill"
                  style={`width: ${review.data.scores.value}%; background-color: ${getScoreColor(review.data.scores.value)}`}
                />
              </div>
              <span class="score-value">{review.data.scores.value}</span>
            </div>
          )}
        </div>
      </section>

      <!-- Main Content -->
      <div class="prose">
        <Content />
      </div>

      <!-- Price Comparison -->
      {review.data.prices && review.data.prices.length > 0 && (
        <PriceComparison prices={review.data.prices} productName={review.data.product.name} />
      )}

      <!-- Spec Table -->
      {review.data.specs && review.data.specs.length > 0 && (
        <SpecTable specGroups={review.data.specs} />
      )}
    </article>
  </main>

  <footer class="footer">
    <p>&copy; 2024 TechPulse. All rights reserved.</p>
  </footer>
</BaseLayout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* Product Header */
  .product-header {
    margin-bottom: 48px;
    padding-top: 48px;
  }

  .back-link {
    display: inline-block;
    font-size: 14px;
    color: #888;
    margin-bottom: 32px;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: #000;
  }

  .product-title {
    font-size: 40px;
    font-weight: 700;
    color: #000;
    margin-bottom: 16px;
    line-height: 1.2;
    letter-spacing: -0.03em;
  }

  .article-info {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #888;
  }

  .separator {
    color: #ccc;
  }

  .brand {
    font-weight: 500;
  }

  /* Score Summary */
  .score-summary {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: 32px;
    padding: 32px;
    background: #fafafa;
    border-radius: 12px;
    border: 1px solid #eee;
    margin-bottom: 48px;
  }

  .total-score-card {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .total-score-circle {
    position: relative;
    width: 120px;
    height: 120px;
  }

  .total-score-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .score-number {
    display: block;
    font-size: 36px;
    font-weight: 700;
    color: var(--score-color);
    line-height: 1;
    margin-bottom: 4px;
  }

  .score-label {
    display: block;
    font-size: 12px;
    font-weight: 600;
    color: #888;
  }

  .individual-scores {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .score-item {
    display: grid;
    grid-template-columns: 80px 1fr 36px;
    align-items: center;
    gap: 12px;
  }

  .score-name {
    font-size: 13px;
    font-weight: 600;
    color: #333;
  }

  .score-bar {
    height: 8px;
    background: #e5e5e5;
    border-radius: 4px;
    overflow: hidden;
  }

  .score-bar-fill {
    height: 100%;
    border-radius: 4px;
    transition: width 1s ease;
  }

  .score-value {
    font-size: 14px;
    font-weight: 700;
    color: #000;
    text-align: right;
    font-variant-numeric: tabular-nums;
  }

  /* Prose */
  .prose {
    margin-bottom: 48px;
  }

  .prose :global(h2) {
    font-size: 24px;
    font-weight: 700;
    color: #000;
    margin: 48px 0 16px;
    padding-bottom: 12px;
    border-bottom: 1px solid #e5e5e5;
    letter-spacing: -0.02em;
  }

  .prose :global(h3) {
    font-size: 18px;
    font-weight: 600;
    color: #111;
    margin: 32px 0 12px;
  }

  .prose :global(p) {
    font-size: 16px;
    line-height: 1.85;
    color: #333;
    margin-bottom: 20px;
    word-break: keep-all;
  }

  .prose :global(a) {
    color: #2563eb;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    color: #1d4ed8;
  }

  .prose :global(strong) {
    font-weight: 600;
    color: #000;
  }

  .prose :global(ul) {
    margin: 16px 0 24px;
    padding-left: 24px;
    list-style-type: disc;
  }

  .prose :global(ol) {
    margin: 16px 0 24px;
    padding-left: 24px;
    list-style-type: decimal;
  }

  .prose :global(li) {
    font-size: 16px;
    line-height: 1.8;
    color: #333;
    margin-bottom: 6px;
  }

  .prose :global(li::marker) {
    color: #999;
  }

  .prose :global(blockquote) {
    border-left: 3px solid #e5e5e5;
    padding-left: 16px;
    margin: 24px 0;
    color: #666;
    font-style: italic;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid #e5e5e5;
    margin: 40px 0;
  }

  /* 표 스타일 */
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0 28px;
    font-size: 14px;
  }

  .prose :global(thead) {
    background: #f8f8f8;
  }

  .prose :global(th) {
    padding: 12px 16px;
    font-weight: 600;
    color: #111;
    text-align: left;
    border-bottom: 2px solid #e0e0e0;
    white-space: nowrap;
  }

  .prose :global(td) {
    padding: 11px 16px;
    color: #333;
    border-bottom: 1px solid #f0f0f0;
    line-height: 1.6;
  }

  .prose :global(tbody tr:hover) {
    background: #fafafa;
  }

  .prose :global(code) {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 14px;
    background: #f5f5f5;
    padding: 2px 6px;
    border-radius: 4px;
    color: #e11d48;
  }

  .prose :global(pre) {
    background: #1a1a1a;
    color: #e5e5e5;
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 24px 0;
    font-size: 14px;
    line-height: 1.6;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .prose :global(figure) {
    margin: 32px 0;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .prose :global(figcaption) {
    font-size: 13px;
    color: #888;
    text-align: center;
    margin-top: 8px;
  }

  /* Footer */
  .footer {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 40px;
    border-top: 1px solid #e5e5e5;
    margin-top: 80px;
  }

  .footer p {
    font-size: 13px;
    color: #999;
  }

  /* Responsive */
  @media (max-width: 768px) {
    main {
      padding: 0 20px;
    }

    .product-header {
      padding-top: 32px;
    }

    .product-title {
      font-size: 28px;
    }

    .article-info {
      font-size: 12px;
    }

    .score-summary {
      grid-template-columns: 1fr;
      gap: 24px;
      padding: 24px;
    }

    .total-score-circle {
      width: 100px;
      height: 100px;
    }

    .score-number {
      font-size: 28px;
    }

    .score-item {
      grid-template-columns: 70px 1fr 32px;
      gap: 8px;
    }

    .footer {
      padding: 32px 20px;
      margin-top: 48px;
    }
  }
</style>
