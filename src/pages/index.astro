---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import { getCollection } from 'astro:content';

const allReviews = await getCollection('reviews');

// 최신순 정렬
const sortedReviews = allReviews.sort(
  (a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);

// 카테고리 한글 매핑
const categoryMap: Record<string, string> = {
  laptop: 'Laptop',
  smartphone: 'Phone',
  gadget: 'Gadget',
};

// 날짜 포맷
function formatDate(dateStr: string) {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}

// 총 점수 계산
function calculateTotalScore(scores: any) {
  const { performance, design, display, battery, value } = scores;
  if (display === 0) {
    return Math.round((performance + design + battery + value) / 4);
  }
  return Math.round((performance + design + display + battery + value) / 5);
}

const title = 'TechPulse - Blog';
const description = '최신 전자제품 리뷰와 비교 분석. 노트북, 스마트폰, 가젯의 솔직한 평가와 최저가 정보를 제공합니다.';
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="main-content">
    <div class="page-header">
      <h1 class="page-title">Blog</h1>
    </div>

    <div class="post-list">
      <div class="post-list-header">
        <span class="col-date">Date</span>
        <span class="col-title">Title</span>
        <span class="col-category">Category</span>
        <span class="col-score">Score</span>
      </div>

      {sortedReviews.map((review) => (
        <a href={`/reviews/${review.slug}`} class="post-row">
          <span class="col-date">
            <time datetime={review.data.publishedAt}>
              {formatDate(review.data.publishedAt)}
            </time>
          </span>
          <span class="col-title">
            <span class="post-name">{review.data.product.name}</span>
            <span class="post-desc">{review.data.description}</span>
          </span>
          <span class="col-category">
            <span class="category-tag">{categoryMap[review.data.product.category]}</span>
          </span>
          <span class="col-score">
            <span class="score-value">{calculateTotalScore(review.data.scores)}</span>
          </span>
        </a>
      ))}
    </div>
  </main>

  <footer class="footer">
    <p>&copy; 2024 TechPulse. All rights reserved.</p>
  </footer>
</BaseLayout>

<style>
  .main-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    min-height: calc(100vh - 200px);
  }

  .page-header {
    padding: 80px 0 48px;
  }

  .page-title {
    font-size: 48px;
    font-weight: 700;
    color: #000;
    letter-spacing: -0.03em;
  }

  /* Post List Table */
  .post-list {
    width: 100%;
  }

  .post-list-header {
    display: grid;
    grid-template-columns: 140px 1fr 100px 60px;
    gap: 16px;
    padding: 12px 0;
    border-bottom: 1px solid #e5e5e5;
    font-size: 12px;
    font-weight: 500;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-row {
    display: grid;
    grid-template-columns: 140px 1fr 100px 60px;
    gap: 16px;
    padding: 20px 0;
    border-bottom: 1px solid #f0f0f0;
    align-items: center;
    transition: background 0.15s ease;
    margin: 0 -16px;
    padding-left: 16px;
    padding-right: 16px;
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
  }

  .post-row:hover {
    background: #fafafa;
  }

  .col-date {
    font-size: 14px;
    color: #888;
    font-variant-numeric: tabular-nums;
  }

  .col-title {
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 0;
  }

  .post-name {
    font-size: 16px;
    font-weight: 600;
    color: #000;
    letter-spacing: -0.01em;
  }

  .post-desc {
    font-size: 14px;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .col-category {
    display: flex;
    align-items: center;
  }

  .category-tag {
    font-size: 12px;
    font-weight: 500;
    color: #666;
    background: #f5f5f5;
    padding: 4px 10px;
    border-radius: 100px;
    border: 1px solid #e5e5e5;
  }

  .col-score {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .score-value {
    font-size: 14px;
    font-weight: 600;
    color: #000;
    font-variant-numeric: tabular-nums;
  }

  /* Footer */
  .footer {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 40px;
    border-top: 1px solid #e5e5e5;
    margin-top: 80px;
  }

  .footer p {
    font-size: 13px;
    color: #999;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-content {
      padding: 0 20px;
    }

    .page-header {
      padding: 48px 0 32px;
    }

    .page-title {
      font-size: 32px;
    }

    .post-list-header {
      display: none;
    }

    .post-row {
      grid-template-columns: 1fr;
      gap: 8px;
      padding: 16px;
      margin: 0 -16px;
    }

    .col-date {
      font-size: 12px;
      order: 1;
    }

    .col-title {
      order: 2;
    }

    .col-category {
      order: 3;
    }

    .col-score {
      order: 0;
      justify-content: flex-start;
    }

    .score-value {
      font-size: 13px;
      background: #000;
      color: #fff;
      padding: 2px 8px;
      border-radius: 4px;
    }

    .footer {
      padding: 32px 20px;
      margin-top: 48px;
    }
  }
</style>
