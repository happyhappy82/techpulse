---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import { getCollection } from 'astro:content';

// Static paths 생성 - Content Collection 기반
export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// 날짜 포맷팅
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('ko-KR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

const title = post.data.title;
const description = post.data.description;
---

<BaseLayout
  title={title}
  description={description}
  ogType="article"
  publishedTime={post.data.publishedAt}
>
  <Header />

  <main>
    <article class="post-article">
      <header class="post-header">
        <a href="/" class="back-link">&larr; Back</a>
        <h1 class="post-title">{post.data.title}</h1>
        <div class="article-info">
          {post.data.publishedAt && (
            <time datetime={post.data.publishedAt}>
              {formatDate(post.data.publishedAt)}
            </time>
          )}
          {post.data.tags.length > 0 && (
            <>
              <span class="separator">&middot;</span>
              <div class="tags">
                {post.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </>
          )}
        </div>
      </header>

      <div class="prose">
        <Content />
      </div>
    </article>
  </main>

  <footer class="footer">
    <p>&copy; 2024 TechPulse. All rights reserved.</p>
  </footer>
</BaseLayout>

<script>
  // FAQ 섹션 자동 감지 → 카드 스타일 래핑
  document.querySelectorAll('.prose h2').forEach(h2 => {
    if (!h2.textContent?.includes('자주 묻는 질문')) return;
    h2.classList.add('faq-heading');

    let el = h2.nextElementSibling;
    while (el) {
      const next = el.nextElementSibling;
      if (el.tagName === 'H2') break; // 다음 섹션이면 중단

      if (el.tagName === 'H3') {
        const card = document.createElement('div');
        card.className = 'faq-card';

        const question = document.createElement('div');
        question.className = 'faq-question';
        question.innerHTML = '<span class="faq-q">Q</span>' + el.innerHTML;

        card.appendChild(question);

        // h3 다음의 p들을 답변으로 모음
        let answer = next;
        const answerDiv = document.createElement('div');
        answerDiv.className = 'faq-answer';

        while (answer && answer.tagName !== 'H3' && answer.tagName !== 'H2') {
          const nextAnswer = answer.nextElementSibling;
          answerDiv.appendChild(answer);
          answer = nextAnswer;
        }

        card.appendChild(answerDiv);
        el.replaceWith(card);
        el = answer;
      } else {
        el = next;
      }
    }
  });
</script>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .post-header {
    margin-bottom: 48px;
    padding-top: 48px;
  }

  .back-link {
    display: inline-block;
    font-size: 14px;
    color: #888;
    margin-bottom: 32px;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: #000;
  }

  .post-title {
    font-size: 40px;
    font-weight: 700;
    color: #000;
    margin-bottom: 16px;
    line-height: 1.2;
    letter-spacing: -0.03em;
  }

  .article-info {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #888;
  }

  .separator {
    color: #ccc;
  }

  .tags {
    display: flex;
    gap: 6px;
  }

  .tag {
    font-size: 12px;
    font-weight: 500;
    color: #666;
    background: #f5f5f5;
    padding: 2px 8px;
    border-radius: 100px;
    border: 1px solid #e5e5e5;
  }

  /* Prose 스타일 */
  .prose {
    margin-bottom: 48px;
  }

  .prose :global(h1) {
    font-size: 32px;
    font-weight: 700;
    color: #111;
    margin: 56px 0 18px;
    letter-spacing: -0.02em;
  }

  .prose :global(h2) {
    font-size: 24px;
    font-weight: 700;
    color: #111;
    margin: 52px 0 16px;
    padding-bottom: 12px;
    border-bottom: 2px solid #f0f0f0;
    letter-spacing: -0.02em;
  }

  .prose :global(h3) {
    font-size: 18px;
    font-weight: 600;
    color: #222;
    margin: 36px 0 10px;
    padding-left: 12px;
    border-left: 3px solid #2563eb;
  }

  .prose :global(p) {
    font-size: 16.5px;
    line-height: 1.85;
    color: #333;
    margin-bottom: 18px;
    word-break: keep-all;
  }

  .prose :global(a) {
    color: #2563eb;
    text-decoration: none;
    border-bottom: 1px solid rgba(37, 99, 235, 0.3);
    transition: border-color 0.15s ease;
  }

  .prose :global(a:hover) {
    color: #1d4ed8;
    border-bottom-color: #1d4ed8;
  }

  .prose :global(strong) {
    font-weight: 600;
    color: #111;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 20px 0;
    padding-left: 24px;
  }

  .prose :global(ul) {
    list-style-type: none;
    padding-left: 0;
  }

  .prose :global(ul > li) {
    position: relative;
    padding-left: 20px;
  }

  .prose :global(ul > li::before) {
    content: '';
    position: absolute;
    left: 0;
    top: 12px;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #2563eb;
  }

  .prose :global(ol) {
    list-style-type: decimal;
  }

  .prose :global(li) {
    font-size: 16.5px;
    line-height: 1.85;
    color: #333;
    margin-bottom: 8px;
  }

  .prose :global(blockquote) {
    border-left: 4px solid #2563eb;
    padding: 16px 20px;
    margin: 28px 0;
    background: #f8fafc;
    border-radius: 0 8px 8px 0;
    color: #555;
    font-style: italic;
  }

  .prose :global(blockquote p) {
    margin-bottom: 0;
    color: #555;
  }

  .prose :global(pre) {
    background: #1a1a2e;
    color: #e5e5e5;
    padding: 24px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 28px 0;
    font-size: 14px;
    line-height: 1.7;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .prose :global(code) {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 14px;
  }

  .prose :global(p code),
  .prose :global(li code) {
    background: #eff6ff;
    padding: 2px 7px;
    border-radius: 5px;
    font-size: 14px;
    color: #2563eb;
    border: 1px solid #dbeafe;
  }

  .prose :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(to right, transparent, #e0e0e0, transparent);
    margin: 48px 0;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin: 24px 0 32px;
    font-size: 14px;
    border-radius: 10px;
    overflow: hidden;
    border: 1px solid #e8e8e8;
  }

  .prose :global(thead) {
    background: linear-gradient(to bottom, #f9fafb, #f3f4f6);
  }

  .prose :global(th) {
    padding: 13px 16px;
    font-weight: 600;
    color: #111;
    text-align: left;
    border-bottom: 2px solid #e5e7eb;
    white-space: nowrap;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .prose :global(td) {
    padding: 12px 16px;
    color: #444;
    border-bottom: 1px solid #f3f4f6;
    line-height: 1.6;
  }

  .prose :global(tbody tr:last-child td) {
    border-bottom: none;
  }

  .prose :global(tbody tr:hover) {
    background: #f9fafb;
  }

  .prose :global(figure) {
    margin: 36px 0;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }

  .prose :global(figcaption) {
    font-size: 13px;
    color: #888;
    text-align: center;
    margin-top: 10px;
  }

  .prose :global(.callout) {
    display: flex;
    gap: 12px;
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 10px;
    padding: 18px;
    margin: 28px 0;
  }

  .prose :global(.callout-icon) {
    font-size: 20px;
    flex-shrink: 0;
  }

  /* FAQ 섹션 */
  .prose :global(.faq-heading) {
    border-bottom: none;
    text-align: center;
    font-size: 26px;
    margin-bottom: 28px;
  }

  .prose :global(.faq-card) {
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 24px 28px;
    margin-bottom: 16px;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .prose :global(.faq-card:hover) {
    border-color: #d1d5db;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .prose :global(.faq-question) {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: 17px;
    font-weight: 600;
    color: #111;
    line-height: 1.5;
    margin-bottom: 12px;
  }

  .prose :global(.faq-q) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 28px;
    height: 28px;
    background: #2563eb;
    color: #fff;
    font-size: 14px;
    font-weight: 700;
    border-radius: 8px;
    flex-shrink: 0;
    margin-top: 1px;
  }

  .prose :global(.faq-answer) {
    padding-left: 40px;
    color: #555;
  }

  .prose :global(.faq-answer p) {
    font-size: 15.5px;
    line-height: 1.8;
    color: #555;
    margin-bottom: 0;
  }

  /* Footer */
  .footer {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 40px;
    border-top: 1px solid #e5e5e5;
    margin-top: 80px;
  }

  .footer p {
    font-size: 13px;
    color: #999;
  }

  /* Responsive */
  @media (max-width: 768px) {
    main {
      padding: 0 20px;
    }

    .post-header {
      padding-top: 32px;
    }

    .post-title {
      font-size: 28px;
    }

    .article-info {
      font-size: 12px;
    }

    .prose :global(h2) {
      font-size: 21px;
      margin: 40px 0 14px;
    }

    .prose :global(h3) {
      font-size: 17px;
    }

    .prose :global(p),
    .prose :global(li) {
      font-size: 15.5px;
    }

    .prose :global(table) {
      font-size: 13px;
    }

    .prose :global(th),
    .prose :global(td) {
      padding: 10px 12px;
    }

    .prose :global(.faq-card) {
      padding: 20px;
    }

    .prose :global(.faq-question) {
      font-size: 16px;
    }

    .prose :global(.faq-answer) {
      padding-left: 40px;
    }

    .footer {
      padding: 32px 20px;
      margin-top: 48px;
    }
  }
</style>
