---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import { getAllPosts, getPostBySlug, getPageBlocks, blocksToHtml } from '../../lib/notion';

// Static paths 생성
export async function getStaticPaths() {
  try {
    const posts = await getAllPosts();
    return posts
      .filter((post) => post.slug)
      .map((post) => ({
        params: { slug: post.slug },
      }));
  } catch (e) {
    console.warn('Notion fetch failed in getStaticPaths:', e);
    return [];
  }
}

const { slug } = Astro.params;
const post = await getPostBySlug(slug!);

if (!post) {
  return Astro.redirect('/404');
}

const blocks = await getPageBlocks(post.id);
const contentHtml = blocksToHtml(blocks);

// 날짜 포맷팅
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('ko-KR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

const title = post.title;
const description = post.excerpt || post.title;
---

<BaseLayout
  title={title}
  description={description}
  ogType="article"
  publishedTime={post.date}
>
  <Header />

  <main>
    <article class="post-article">
      <header class="post-header">
        <a href="/" class="back-link">&larr; Back</a>
        <h1 class="post-title">{post.title}</h1>
        <div class="article-info">
          {post.date && (
            <time datetime={post.date}>
              {formatDate(post.date)}
            </time>
          )}
          {post.tags.length > 0 && (
            <>
              <span class="separator">&middot;</span>
              <div class="tags">
                {post.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </>
          )}
        </div>
      </header>

      <div class="prose" set:html={contentHtml} />
    </article>
  </main>

  <footer class="footer">
    <p>&copy; 2024 TechPulse. All rights reserved.</p>
  </footer>
</BaseLayout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .post-header {
    margin-bottom: 48px;
    padding-top: 48px;
  }

  .back-link {
    display: inline-block;
    font-size: 14px;
    color: #888;
    margin-bottom: 32px;
    transition: color 0.15s ease;
  }

  .back-link:hover {
    color: #000;
  }

  .post-title {
    font-size: 40px;
    font-weight: 700;
    color: #000;
    margin-bottom: 16px;
    line-height: 1.2;
    letter-spacing: -0.03em;
  }

  .article-info {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #888;
  }

  .separator {
    color: #ccc;
  }

  .tags {
    display: flex;
    gap: 6px;
  }

  .tag {
    font-size: 12px;
    font-weight: 500;
    color: #666;
    background: #f5f5f5;
    padding: 2px 8px;
    border-radius: 100px;
    border: 1px solid #e5e5e5;
  }

  /* Prose 스타일 */
  .prose {
    margin-bottom: 48px;
  }

  .prose :global(h1) {
    font-size: 32px;
    font-weight: 700;
    color: #000;
    margin: 48px 0 16px;
    letter-spacing: -0.02em;
  }

  .prose :global(h2) {
    font-size: 24px;
    font-weight: 700;
    color: #000;
    margin: 40px 0 12px;
    letter-spacing: -0.02em;
  }

  .prose :global(h3) {
    font-size: 20px;
    font-weight: 600;
    color: #000;
    margin: 32px 0 8px;
  }

  .prose :global(p) {
    font-size: 16px;
    line-height: 1.8;
    color: #333;
    margin-bottom: 16px;
  }

  .prose :global(a) {
    color: #2563eb;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    color: #1d4ed8;
  }

  .prose :global(strong) {
    font-weight: 600;
    color: #000;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 16px 0;
    padding-left: 24px;
  }

  .prose :global(li) {
    font-size: 16px;
    line-height: 1.8;
    color: #333;
    margin-bottom: 4px;
  }

  .prose :global(blockquote) {
    border-left: 3px solid #e5e5e5;
    padding-left: 16px;
    margin: 24px 0;
    color: #666;
    font-style: italic;
  }

  .prose :global(pre) {
    background: #1a1a1a;
    color: #e5e5e5;
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 24px 0;
    font-size: 14px;
    line-height: 1.6;
  }

  .prose :global(code) {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 14px;
  }

  .prose :global(p code) {
    background: #f5f5f5;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 14px;
    color: #e11d48;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid #e5e5e5;
    margin: 40px 0;
  }

  .prose :global(figure) {
    margin: 32px 0;
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .prose :global(figcaption) {
    font-size: 13px;
    color: #888;
    text-align: center;
    margin-top: 8px;
  }

  .prose :global(.callout) {
    display: flex;
    gap: 12px;
    background: #fafafa;
    border: 1px solid #eee;
    border-radius: 8px;
    padding: 16px;
    margin: 24px 0;
  }

  .prose :global(.callout-icon) {
    font-size: 20px;
    flex-shrink: 0;
  }

  /* Footer */
  .footer {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 40px;
    border-top: 1px solid #e5e5e5;
    margin-top: 80px;
  }

  .footer p {
    font-size: 13px;
    color: #999;
  }

  /* Responsive */
  @media (max-width: 768px) {
    main {
      padding: 0 20px;
    }

    .post-header {
      padding-top: 32px;
    }

    .post-title {
      font-size: 28px;
    }

    .article-info {
      font-size: 12px;
    }

    .footer {
      padding: 32px 20px;
      margin-top: 48px;
    }
  }
</style>
